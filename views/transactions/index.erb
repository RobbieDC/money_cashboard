<br>
<h3>Transactions</h3>
<a href="/transactions/new">New transaction</a>
<hr>
<br>
<table style="width:100%">
  <tr>
    <th>Merchant</th>
    <th>Type of purchase</th>
    <th>Value</th>
    <th>Date conducted<br>(yyyy/mm/dd)</th>
  </tr>
  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.merchant().name() %></td>
      <td><%= transaction.tag().type() %></td>
      <td>£<%= transaction.value() %></td>
      <td><%= transaction.date_conducted() %></td>
    </tr>
  <% end %>
</table>

<p><b>Total spend: </b>£<%= @total %></p>
<h3>Merchants</h3>
<table style="width:100%">

  <tr>
    <th>Merchant</th>
    <th>Total spent</th>
    <th>Tags</th>
  </tr>

  <% @merchants.each do |merchant| %>
    <tr>
      <td><%= merchant.name() %></td>
      <td>Â£<%= merchant.total_spent() %></td>
      <td>
        <% counter = 0 %>
        <% merchant.tag_types().each() do |type| %>
          <% if counter == 0 %>
            <%= type %>
          <% else %>
            | <%= type %>
          <% end %>
          <% counter += 1 %>
        <% end %>
      </td>
    </tr>
  <% end %>

</table>